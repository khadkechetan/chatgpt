import numpy as np
from sklearn.metrics import confusion_matrix

# Example data
y = np.array([0, 1, 1, 2, 2, 0, 1, 2])
y_pred = np.array([0, 1, 0, 2, 1, 0, 1, 2])

# Unique class labels
class_labels = np.unique(y)

# Compute confusion matrix
cm = confusion_matrix(y, y_pred, labels=class_labels)

# Compute class-wise accuracy
classwise_accuracy = {label: cm[i, i] / cm[i].sum() for i, label in enumerate(class_labels)}

# Display the results
print("Class-wise Accuracy:")
for label, accuracy in classwise_accuracy.items():
    print(f"Class {label}: {accuracy:.2f}")
